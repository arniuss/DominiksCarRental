@using Microsoft.AspNetCore.Identity
@model IEnumerable<DominiksCarRental.DTOs.CarTypeDTO>

<div class="d-flex justify-content-center align-items-center vh-70">
    <div class="row">
        <h1 class="text-center">List of Car Types</h1>
            <table class="custom-table table-sm table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                @foreach (var carType in Model)
                {
                    <tr>
                        <td>@carType.ID</td>
                        <td>@carType.Name</td>
                        <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@carType.ID">Edit</a></td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@carType.ID" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
    <div class="d-flex justify-content-center mt-2">
        <a asp-action="Create" class="btn btn-secondary">Create a Car Type</a>
    </div>
    </div>
</div>
