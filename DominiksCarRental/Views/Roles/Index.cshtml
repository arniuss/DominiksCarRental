@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ROLES";
}

<div class="d-flex justify-content-center align-items-center vh-70">
    <div class="row">
        <h1 class="text-center">All Roles</h1>
        <table class="custom-table table-sm table-bordered">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Update</th>
                <th>Delete</th>        
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a></td>
                    <td>
                        @if (role.Name != "Admin")
                        {
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Cannot delete admin role</span>
                        }
                    </td>
            
                </tr>
            }
        </table>
        <div class="d-flex justify-content-center mt-2">
            <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
        </div>
    </div>
</div>
