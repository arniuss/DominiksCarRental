@using Microsoft.AspNetCore.Identity
@model IEnumerable<DominiksCarRental.Models.Reservation>

<div class="d-flex justify-content-center align-items-center vh-70">
    <div class="row">
        <h1 class="text-center">List of Car Reservations</h1>
            <table class="custom-table table-sm table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Car ID</th>
                    <th>Name</th>
                    <th>Name of the car</th>
                    <th>Phone number</th>
                    <th>Email</th>
                    <th>Message</th>
                </tr>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.Id</td>
                        <td>@reservation.CarId</td>
                        <td>@reservation.Name</td>
                        <td>@reservation.CarName</td>
                        <td>@reservation.Phone</td>
                        <td>@reservation.Email</td>
                        <td>@reservation.Message</td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                        {
                            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@reservation.Id">Edit</a></td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@reservation.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        }
                </tr>
                }
            </table>
    <div class="d-flex justify-content-center mt-2">
        <a asp-action="Create" class="btn btn-secondary">Create a New Reservation</a>
    </div>
    </div>
</div>
